---
import Code from './Code.astro';

const vueExample = `<script setup>
import { Graph } from '@3plate/graph-vue';

const nodes = ['a', 'b', 'c', 'd'];
const edges = ['a->b', 'a->c', 'b->d', 'c->d'];
</script>

<template>
  <Graph :nodes="nodes" :edges="edges" />
</template>`;
---

<div class="demo-wrapper">
  <div class="demo-info">
    <h3>Vue Implementation</h3>
    <p>
      Using <code>@3plate/graph-vue</code> package
    </p>
  </div>

  <div class="placeholder">
    <p>Vue wrapper coming soon!</p>
    <code>npm install @3plate/graph-vue</code>
  </div>

  <div class="code-example">
    <h4>Planned Usage</h4>
    <Code code={vueExample} lang="typescript" />
  </div>
</div>

<style>
  .placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 200px;
    gap: 1rem;
    background: var(--color-bg-secondary);
    border-radius: 0.5rem;
    margin: 1rem 0;
  }

  .placeholder p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .placeholder code {
    font-size: 1rem;
    padding: 0.5rem 1rem;
  }

  .code-example {
    margin-top: 1.5rem;
  }

  .code-example h4 {
    margin-bottom: 0.75rem;
    font-size: 1rem;
    color: var(--color-text-muted);
  }
</style>
