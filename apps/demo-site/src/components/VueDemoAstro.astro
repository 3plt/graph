---
import { examples, exampleList } from '../examples';
import { generateVueCode } from '../examples/codegen';
import Code from './Code.astro';

const defaultExample = examples.diamond;
const defaultCode = generateVueCode(defaultExample);
---

<div class="demo-wrapper">
  <div class="demo-header">
    <div class="demo-info">
      <h3>Vue Implementation</h3>
      <p>Using <code>@3plate/graph-vue</code> package</p>
    </div>
    <div class="demo-controls">
      <div class="control-group">
        <label for="vue-example-select">Example:</label>
        <select id="vue-example-select">
          {exampleList.map(key => (
            <option value={key} selected={key === 'diamond'}>{examples[key].name}</option>
          ))}
        </select>
      </div>
      <div class="control-group">
        <label for="vue-color-mode">Theme:</label>
        <select id="vue-color-mode" data-color-mode-select>
          <option value="system">System</option>
          <option value="light">Light</option>
          <option value="dark">Dark</option>
        </select>
      </div>
    </div>
  </div>

  <div class="placeholder">
    <p>Vue wrapper coming soon!</p>
    <code>npm install @3plate/graph-vue</code>
  </div>

  <div class="code-example">
    <h4>Code</h4>
    <div id="vue-code-display">
      <Code code={defaultCode} lang="typescript" />
    </div>
  </div>
</div>

<style>
  .demo-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .demo-controls {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .control-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .control-group label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .control-group select {
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    background: var(--color-bg);
    color: var(--color-text);
    font-size: 0.875rem;
    cursor: pointer;
  }

  .placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 200px;
    gap: 1rem;
    background: var(--color-bg-secondary);
    border-radius: 0.5rem;
    margin: 1rem 0;
  }

  .placeholder p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .placeholder code {
    font-size: 1rem;
    padding: 0.5rem 1rem;
  }

  .code-example h4 {
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  #vue-code-display {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    font-size: 0.8125rem;
    line-height: 1.5;
    margin: 0;
  }

  #vue-code-display code {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
  }
</style>

<script>
  import { examples } from '../examples';
  import { generateVueCode } from '../examples/codegen';
  import { highlightCode } from '../utils/highlighter';
  import { setColorMode, syncColorModeSelects, type ColorMode } from '../utils/demoState';

  document.addEventListener('DOMContentLoaded', () => {
    const select = document.getElementById('vue-example-select') as HTMLSelectElement;
    const codeDisplay = document.getElementById('vue-code-display');
    const colorModeSelect = document.getElementById('vue-color-mode') as HTMLSelectElement;

    if (select && codeDisplay) {
      select.addEventListener('change', async () => {
        const example = examples[select.value];
        if (example) {
          const code = generateVueCode(example);
          const highlighted = await highlightCode(code, 'vue');
          codeDisplay.innerHTML = `<div class="code-block">${highlighted}</div>`;
        }
      });
    }

    if (colorModeSelect) {
      colorModeSelect.addEventListener('change', () => {
        setColorMode(colorModeSelect.value as ColorMode);
        syncColorModeSelects();
      });
    }
  });
</script>
