---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { examples, exampleList } from '../examples';
---

<Layout title="Playground - @3plate/graph">
  <Header />

  <main class="playground">
    <div class="sidebar">
      <h2>Examples</h2>
      <div class="example-list">
        {exampleList.map((key, i) => (
          <button class={`example-btn ${i === 0 ? 'active' : ''}`} data-example={key}>
            {examples[key].name}
          </button>
        ))}
      </div>

      <h2>Options</h2>
      <div class="options">
        <div class="option-group">
          <label>Orientation</label>
          <select id="orientation">
            <option value="TB">Top to Bottom</option>
            <option value="BT">Bottom to Top</option>
            <option value="LR">Left to Right</option>
            <option value="RL">Right to Left</option>
          </select>
        </div>

        <div class="option-group">
          <label>Port Style</label>
          <select id="portStyle">
            <option value="outside">Outside</option>
            <option value="inside">Inside</option>
          </select>
        </div>

        <div class="option-group">
          <label>
            <input type="checkbox" id="portLabelRotate" />
            Rotate Port Labels
          </label>
        </div>

        <div class="option-group">
          <label>Theme</label>
          <select id="colorMode">
            <option value="system">System</option>
            <option value="light">Light</option>
            <option value="dark">Dark</option>
          </select>
        </div>

      </div>

    </div>

    <div class="graph-area">
      <div class="graph-toolbar">
        <div class="nav-controls">
          <button class="nav-btn" id="nav-first" title="First (Home)">‚èÆ</button>
          <button class="nav-btn" id="nav-prev" title="Previous (‚Üê)">‚óÄ</button>
          <span id="history-label" style="min-width: 4rem; text-align: center;">‚Äî / ‚Äî</span>
          <button class="nav-btn" id="nav-next" title="Next (‚Üí)">‚ñ∂</button>
          <button class="nav-btn" id="nav-last" title="Last (End)">‚è≠</button>
        </div>
        <button class="nav-btn" id="help-btn" title="How to edit">‚ùì Help</button>
        <button class="nav-btn" id="edit-toggle" title="Toggle edit mode">‚úé Edit Me!</button>
        <button class="nav-btn" id="rebuild" title="Rebuild graph from scratch">üîÑ Rebuild</button>
      </div>
      <div class="graph-container" id="playground-graph"></div>
    </div>
  </main>
</Layout>

<style>
  .playground {
    display: flex;
    height: calc(100vh - 60px);
  }

  .sidebar {
    width: 280px;
    background: var(--color-bg);
    border-right: 1px solid var(--color-border);
    padding: 1.5rem;
    overflow-y: auto;
  }

  .sidebar h2 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }

  .sidebar h2:first-child {
    margin-top: 0;
  }

  .example-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .example-btn {
    padding: 0.75rem 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    text-align: left;
    cursor: pointer;
    font-size: 0.875rem;
    color: var(--color-text);
    transition: all 0.15s;
  }

  .example-btn:hover {
    background: var(--color-border);
  }

  .example-btn.active {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .options {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .option-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .option-group label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .option-group select {
    padding: 0.5rem;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .option-group input[type="checkbox"] {
    margin-right: 0.5rem;
  }


  .graph-area {
    flex: 1;
    padding: 1.5rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .graph-toolbar {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-controls {
    display: flex;
    gap: 0.25rem;
  }

  .nav-btn {
    padding: 0.5rem 0.75rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: var(--color-text);
    transition: all 0.15s;
  }

  .nav-btn:hover:not(:disabled) {
    background: var(--color-border);
  }

  .nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  /* Prominent edit toggle */
  #edit-toggle {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: #fff;
    font-weight: 600;
  }

  .graph-container {
    flex: 1;
    background: var(--color-bg);
    border-radius: 0.75rem;
    box-shadow: var(--shadow-md);
    overflow: hidden;
  }
</style>
<style is:global>
  /* Help modal (global so it applies to elements appended to document.body) */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }
  .modal {
    width: min(680px, calc(100vw - 2rem));
    background: var(--color-bg);
    color: var(--color-text);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    box-shadow: var(--shadow-lg);
    overflow: hidden;
  }
  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg-secondary);
  }
  .modal-header h3 {
    font-size: 1rem;
    font-weight: 600;
  }
  .modal-close {
    background: transparent;
    border: none;
    color: var(--color-text);
    font-size: 1.25rem;
    cursor: pointer;
  }
  .modal-body {
    padding: 1rem;
    line-height: 1.6;
  }
  .modal-body ul {
    margin: 0.5rem 0 0 1.25rem;
  }
</style>

<script>
  import { graph } from '@3plate/graph-core';
  import { examples, exampleList } from '../examples';

  let currentExample = exampleList[0];
  let currentGraph: any = null;
  let isEditable = false;

  function getResolvedColorMode(): 'light' | 'dark' {
    const mode = (document.getElementById('colorMode') as HTMLSelectElement).value;
    if (mode === 'system') {
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }
    return mode as 'light' | 'dark';
  }

  function getOptions(exampleOptions?: any) {
    const orientation = (document.getElementById('orientation') as HTMLSelectElement).value;

    return {
      graph: { orientation },
      canvas: {
        width: '100%',
        height: '100%',
        colorMode: getResolvedColorMode(),
        editable: isEditable,
        ...exampleOptions?.canvas,
      }
    };
  }

  async function renderGraph() {
    const container = document.getElementById('playground-graph');
    if (!container) return;

    container.innerHTML = '';

    const example = examples[currentExample];
    const options = getOptions(example.options);

    try {
      currentGraph = await graph({
        root: 'playground-graph',
        nodes: example.nodes as any,
        edges: example.edges as any,
        options,
        events: {
          historyChange: () => updateHistoryLabel(),
        }
      } as any);
      updateHistoryLabel();
    } catch (e) {
      console.error('Failed to render graph:', e);
      container.innerHTML = '<p style="padding: 2rem; color: #ef4444;">Failed to load graph</p>';
    }
  }

  function updateHistoryLabel() {
    const label = document.getElementById('history-label');
    if (!label || !currentGraph) return;
    try {
      const idx = currentGraph.getHistoryIndex?.() ?? 0;
      const len = currentGraph.getHistoryLength?.() ?? 1;
      label.textContent = `${idx + 1} / ${len}`;
    } catch {
      label.textContent = '‚Äî / ‚Äî';
    }
  }

  // Example button handlers
  document.querySelectorAll('.example-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.example-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentExample = btn.getAttribute('data-example') || exampleList[0];
      renderGraph();
    });
  });

  // Auto-apply when any option changes
  document.querySelectorAll('.options select, .options input').forEach(el => {
    el.addEventListener('change', renderGraph);
  });

  // Navigation controls
  document.getElementById('nav-first')?.addEventListener('click', () => { currentGraph?.nav('first'); updateHistoryLabel(); });
  document.getElementById('nav-prev')?.addEventListener('click', () => { currentGraph?.nav('prev'); updateHistoryLabel(); });
  document.getElementById('nav-next')?.addEventListener('click', () => { currentGraph?.nav('next'); updateHistoryLabel(); });
  document.getElementById('nav-last')?.addEventListener('click', () => { currentGraph?.nav('last'); updateHistoryLabel(); });

  // Rebuild button
  document.getElementById('rebuild')?.addEventListener('click', () => currentGraph?.rebuild());

  // Edit toggle
  document.getElementById('edit-toggle')?.addEventListener('click', () => {
    isEditable = !isEditable;
    const btn = document.getElementById('edit-toggle');
    if (btn) btn.textContent = isEditable ? '‚úì Done Editing' : '‚úé Edit Me!';
    const rebuildBtn = document.getElementById('rebuild') as HTMLButtonElement | null;
    if (rebuildBtn) rebuildBtn.disabled = !isEditable;
    try {
      currentGraph?.setEditable?.(isEditable);
    } catch {}
  });

  // Help modal logic
  const helpBtn = document.getElementById('help-btn');
  let helpOverlay: HTMLElement | null = null;
  function openHelp() {
    if (!helpOverlay) {
      helpOverlay = document.createElement('div');
      helpOverlay.className = 'modal-overlay';
      helpOverlay.innerHTML = `
        <div class="modal" role="dialog" aria-modal="true" aria-labelledby="help-title">
          <div class="modal-header">
            <h3 id="help-title">Editing the Graph</h3>
            <button class="modal-close" title="Close" aria-label="Close">√ó</button>
          </div>
          <div class="modal-body">
            <p>Here‚Äôs how to edit the graph:</p>
            <ul>
              <li><strong>Enable editing</strong>: Click ‚ÄúEdit Me!‚Äù</li>
              <li><strong>Add a node</strong>: Double‚Äëclick an empty area</li>
              <li><strong>Edit a node</strong>: Double‚Äëclick a node</li>
              <li><strong>Edit an edge</strong>: Double‚Äëclick an edge</li>
              <li><strong>Create an edge</strong>: Click and drag from a node (or its port) onto another node; press Esc to cancel</li>
              <li><strong>Pan</strong>: Drag on canvas or edges; <strong>Zoom</strong>: Mouse wheel or controls</li>
              <li><strong>Rebuild</strong>: Use ‚ÄúRebuild‚Äù to re-layout from scratch (enabled in edit mode)</li>
            </ul>
            <p>When you‚Äôre done, click ‚ÄúDone Editing‚Äù to lock the canvas.</p>
          </div>
        </div>
      `;
      document.body.appendChild(helpOverlay);
      helpOverlay.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (target.classList.contains('modal-overlay') || target.classList.contains('modal-close')) {
          closeHelp();
        }
      });
    }
    helpOverlay.style.display = 'flex';
  }
  function closeHelp() {
    if (helpOverlay) helpOverlay.style.display = 'none';
  }
  helpBtn?.addEventListener('click', openHelp);

  // Keyboard shortcuts for navigation
  document.addEventListener('keydown', (e) => {
    if (!currentGraph) return;
    if (e.target instanceof HTMLInputElement || e.target instanceof HTMLSelectElement) return;

    switch (e.key) {
      case 'Home':
        currentGraph.nav('first'); updateHistoryLabel();
        break;
      case 'End':
        currentGraph.nav('last'); updateHistoryLabel();
        break;
      case 'ArrowLeft':
        currentGraph.nav('prev'); updateHistoryLabel();
        break;
      case 'ArrowRight':
        currentGraph.nav('next'); updateHistoryLabel();
        break;
    }
  });

  // Initial render
  renderGraph();
  // Ensure rebuild state matches initial edit mode
  (document.getElementById('rebuild') as HTMLButtonElement | null)?.setAttribute('disabled', (!isEditable).toString());
</script>
