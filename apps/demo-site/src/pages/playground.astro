---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { examples, exampleList } from '../examples';
---

<Layout title="Playground - @3plate/graph">
  <Header />

  <main class="playground">
    <div class="sidebar">
      <h2>Examples</h2>
      <div class="example-list">
        {exampleList.map((key, i) => (
          <button class={`example-btn ${i === 0 ? 'active' : ''}`} data-example={key}>
            {examples[key].name}
          </button>
        ))}
      </div>

      <h2>Options</h2>
      <div class="options">
        <div class="option-group">
          <label>Orientation</label>
          <select id="orientation">
            <option value="TB">Top to Bottom</option>
            <option value="BT">Bottom to Top</option>
            <option value="LR">Left to Right</option>
            <option value="RL">Right to Left</option>
          </select>
        </div>

        <div class="option-group">
          <label>Port Style</label>
          <select id="portStyle">
            <option value="outside">Outside</option>
            <option value="inside">Inside</option>
          </select>
        </div>

        <div class="option-group">
          <label>
            <input type="checkbox" id="portLabelRotate" />
            Rotate Port Labels
          </label>
        </div>

        <div class="option-group">
          <label>Theme</label>
          <select id="colorMode">
            <option value="system">System</option>
            <option value="light">Light</option>
            <option value="dark">Dark</option>
          </select>
        </div>

      </div>

    </div>

    <div class="graph-area">
      <div class="graph-toolbar">
        <div class="nav-controls">
          <button class="nav-btn" id="nav-first" title="First (Home)">‚èÆ</button>
          <button class="nav-btn" id="nav-prev" title="Previous (‚Üê)">‚óÄ</button>
          <span id="history-label" style="min-width: 4rem; text-align: center; display: inline-flex; align-items: center; justify-content: center; height: 2.25rem;">‚Äî / ‚Äî</span>
          <button class="nav-btn" id="nav-next" title="Next (‚Üí)">‚ñ∂</button>
          <button class="nav-btn" id="nav-last" title="Last (End)">‚è≠</button>
        </div>
        <div class="connect-controls" style="display:flex; gap:.5rem; align-items:center;">
          <button class="nav-btn source-icon-btn" id="source-icon" title="Data Source Connection">üì°</button>
        </div>
        <button class="nav-btn" id="help-btn" title="How to edit">‚ùì</button>
        <button class="nav-btn" id="edit-toggle" title="Toggle edit mode">‚úé Edit</button>
        <button class="nav-btn" id="rebuild" title="Rebuild graph from scratch">üîÑ Rebuild</button>
      </div>
      <div class="graph-container" id="playground-graph"></div>
    </div>
  </main>
</Layout>

<style>
  .playground {
    display: flex;
    height: calc(100vh - 60px);
  }

  .sidebar {
    width: 280px;
    background: var(--color-bg);
    border-right: 1px solid var(--color-border);
    padding: 1.5rem;
    overflow-y: auto;
  }

  .sidebar h2 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }

  .sidebar h2:first-child {
    margin-top: 0;
  }

  .example-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .example-btn {
    padding: 0.75rem 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    text-align: left;
    cursor: pointer;
    font-size: 0.875rem;
    color: var(--color-text);
    transition: all 0.15s;
  }

  .example-btn:hover {
    background: var(--color-border);
  }

  .example-btn.active {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .options {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .option-group {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .option-group label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .option-group select {
    padding: 0.5rem;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .option-group input[type="checkbox"] {
    margin-right: 0.5rem;
  }


  .graph-area {
    flex: 1;
    padding: 1.5rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .graph-toolbar {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-controls {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-btn {
    padding: 0.5rem 0.75rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: var(--color-text);
    transition: all 0.15s;
    height: 2.25rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
  }

  .nav-btn:hover:not(:disabled) {
    background: var(--color-border);
  }

  .nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  /* Prominent edit toggle */
  #edit-toggle {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: #fff;
    font-weight: 600;
  }

  /* Source Icon Button */
  .source-icon-btn {
    font-size: 1.1rem;
    padding: 0.5rem;
    min-width: 2.5rem;
    position: relative;
    height: 2.25rem;
  }

  .source-icon-btn::after {
    content: '';
    position: absolute;
    bottom: 2px;
    right: 2px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--color-border);
    border: 1px solid var(--color-bg);
  }

  .source-icon-btn.active::after {
    background: rgb(34, 197, 94);
    box-shadow: 0 0 4px rgba(34, 197, 94, 0.5);
  }

  .source-icon-btn.connecting::after {
    background: rgb(251, 191, 36);
    box-shadow: 0 0 4px rgba(251, 191, 36, 0.5);
    animation: pulse-dot 1.5s ease-in-out infinite;
  }

  .source-icon-btn.error::after {
    background: rgb(239, 68, 68);
    box-shadow: 0 0 4px rgba(239, 68, 68, 0.5);
  }

  .source-icon-btn.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: #fff;
  }

  .source-icon-btn.connecting {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: #fff;
    opacity: 0.7;
    animation: pulse 1.5s ease-in-out infinite;
  }

  .source-icon-btn.error {
    border-color: rgb(239, 68, 68);
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }

  .graph-container {
    flex: 1;
    background: var(--color-bg);
    border-radius: 0.75rem;
    box-shadow: var(--shadow-md);
    overflow: hidden;
  }
</style>
<style is:global>
  /* Help modal (global so it applies to elements appended to document.body) */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }
  .modal {
    width: min(680px, calc(100vw - 2rem));
    background: var(--color-bg);
    color: var(--color-text);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    box-shadow: var(--shadow-lg);
    overflow: hidden;
  }
  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg-secondary);
  }
  .modal-header h3 {
    font-size: 1rem;
    font-weight: 600;
  }
  .modal-close {
    background: transparent;
    border: none;
    color: var(--color-text);
    font-size: 1.25rem;
    cursor: pointer;
  }
  .modal-body {
    padding: 1rem;
    line-height: 1.6;
  }
  .modal-body ul {
    margin: 0.5rem 0 0 1.25rem;
  }
  .modal-body .form-group {
    margin-bottom: 1rem;
  }
  .modal-body label {
    display: block;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }
  .modal-body input[type="text"] {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    font-size: 0.875rem;
    background: var(--color-bg);
    color: var(--color-text);
  }
  .modal-body .button-group {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  .modal-body .button-group button {
    flex: 1;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    background: var(--color-bg-secondary);
    color: var(--color-text);
    cursor: pointer;
    font-size: 0.875rem;
    transition: all 0.15s;
  }
  .modal-body .button-group button:hover:not(:disabled) {
    background: var(--color-border);
  }
  .modal-body .button-group button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  .modal-body .button-group button.primary {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: #fff;
  }
  .modal-body .button-group button.primary:hover:not(:disabled) {
    background: var(--color-primary);
    opacity: 0.9;
  }
  .modal-body .status-message {
    margin-top: 1rem;
    padding: 0.75rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  .modal-body .status-message.info {
    background: rgba(59, 130, 246, 0.1);
    color: rgb(59, 130, 246);
    border: 1px solid rgba(59, 130, 246, 0.2);
  }
  .modal-body .status-message.error {
    background: rgba(239, 68, 68, 0.1);
    color: rgb(239, 68, 68);
    border: 1px solid rgba(239, 68, 68, 0.2);
  }
  .modal-body .status-message.success {
    background: rgba(34, 197, 94, 0.1);
    color: rgb(34, 197, 94);
    border: 1px solid rgba(34, 197, 94, 0.2);
  }
  .modal-body .loading-spinner {
    display: inline-block;
    width: 1rem;
    height: 1rem;
    border: 2px solid var(--color-border);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.6s linear infinite;
    margin-right: 0.5rem;
    vertical-align: middle;
  }
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  .modal-body .source-type-selector {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    padding: 0.5rem;
    background: var(--color-bg-secondary);
    border-radius: 0.25rem;
  }
  .modal-body .source-type-option {
    flex: 1;
    padding: 0.5rem;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    background: var(--color-bg);
    color: var(--color-text);
    cursor: pointer;
    text-align: center;
    font-size: 0.875rem;
    transition: all 0.15s;
  }
  .modal-body .source-type-option:hover {
    background: var(--color-border);
  }
  .modal-body .source-type-option.active {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: #fff;
  }
  .modal-body .source-controls {
    display: none;
  }
  .modal-body .source-controls.active {
    display: block;
  }
</style>

<script>
  import { graph } from '@3plate/graph-core';
  import { applyIngestMessage } from '@3plate/graph-core';
  import { examples, exampleList } from '../examples';
  import { WebSocketSource } from '../utils/sources/WebSocketSource';
  import { FileSystemSource } from '../utils/sources/FileSystemSource';

  let currentExample = exampleList[0];
  let currentGraph: any = null;
  let isEditable = false;
  let wsSource: WebSocketSource<any, any> | null = null;
  let fsSource: FileSystemSource<any, any> | null = null;
  let wsStatus: 'disconnected' | 'connecting' | 'connected' | 'error' = 'disconnected';
  let fsStatus: 'disconnected' | 'opening' | 'connected' | 'error' = 'disconnected';
  let activeSourceType: 'ws' | 'folder' | null = null;
  let wsUrl = 'ws://localhost:8787';
  let sourceModal: HTMLElement | null = null;

  function getResolvedColorMode(): 'light' | 'dark' {
    const mode = (document.getElementById('colorMode') as HTMLSelectElement).value;
    if (mode === 'system') {
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }
    return mode as 'light' | 'dark';
  }

  function getOptions(exampleOptions?: any) {
    const orientation = (document.getElementById('orientation') as HTMLSelectElement).value;

    return {
      graph: { orientation },
      canvas: {
        width: '100%',
        height: '100%',
        colorMode: getResolvedColorMode(),
        editable: isEditable,
        ...exampleOptions?.canvas,
      }
    };
  }

  async function renderGraph() {
    const container = document.getElementById('playground-graph');
    if (!container) return;

    container.innerHTML = '';

    const example = examples[currentExample];
    const options = getOptions(example.options);

    try {
      currentGraph = await graph({
        root: 'playground-graph',
        nodes: example.nodes as any,
        edges: example.edges as any,
        options,
        events: {
          historyChange: () => updateHistoryLabel(),
        }
      } as any);
      updateHistoryLabel();
    } catch (e) {
      console.error('Failed to render graph:', e);
      container.innerHTML = '<p style="padding: 2rem; color: #ef4444;">Failed to load graph</p>';
    }
  }

  function updateHistoryLabel() {
    const label = document.getElementById('history-label');
    if (!label || !currentGraph) return;
    try {
      const idx = currentGraph.getHistoryIndex?.() ?? 0;
      const len = currentGraph.getHistoryLength?.() ?? 1;
      label.textContent = `${idx + 1} / ${len}`;
    } catch {
      label.textContent = '‚Äî / ‚Äî';
    }
  }

  // Example button handlers
  document.querySelectorAll('.example-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.example-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentExample = btn.getAttribute('data-example') || exampleList[0];
      renderGraph();
    });
  });

  // Auto-apply when any option changes
  document.querySelectorAll('.options select, .options input').forEach(el => {
    el.addEventListener('change', renderGraph);
  });

  // Navigation controls
  document.getElementById('nav-first')?.addEventListener('click', () => { currentGraph?.nav('first'); updateHistoryLabel(); });
  document.getElementById('nav-prev')?.addEventListener('click', () => { currentGraph?.nav('prev'); updateHistoryLabel(); });
  document.getElementById('nav-next')?.addEventListener('click', () => { currentGraph?.nav('next'); updateHistoryLabel(); });
  document.getElementById('nav-last')?.addEventListener('click', () => { currentGraph?.nav('last'); updateHistoryLabel(); });

  // Rebuild button
  document.getElementById('rebuild')?.addEventListener('click', () => currentGraph?.rebuild());

  // Edit toggle
  document.getElementById('edit-toggle')?.addEventListener('click', () => {
    isEditable = !isEditable;
    const btn = document.getElementById('edit-toggle');
    if (btn) btn.textContent = isEditable ? '‚úì Done' : '‚úé Edit';
    const rebuildBtn = document.getElementById('rebuild') as HTMLButtonElement | null;
    if (rebuildBtn) rebuildBtn.disabled = !isEditable;
    try {
      currentGraph?.setEditable?.(isEditable);
    } catch {}
  });

  // Help modal logic
  const helpBtn = document.getElementById('help-btn');
  let helpOverlay: HTMLElement | null = null;
  function openHelp() {
    if (!helpOverlay) {
      helpOverlay = document.createElement('div');
      helpOverlay.className = 'modal-overlay';
      helpOverlay.innerHTML = `
        <div class="modal" role="dialog" aria-modal="true" aria-labelledby="help-title">
          <div class="modal-header">
            <h3 id="help-title">Editing the Graph</h3>
            <button class="modal-close" title="Close" aria-label="Close">√ó</button>
          </div>
          <div class="modal-body">
            <p>Here‚Äôs how to edit the graph:</p>
            <ul>
              <li><strong>Enable editing</strong>: Click "Edit"</li>
              <li><strong>Add a node</strong>: Double‚Äëclick an empty area</li>
              <li><strong>Edit a node</strong>: Double‚Äëclick a node</li>
              <li><strong>Edit an edge</strong>: Double‚Äëclick an edge</li>
              <li><strong>Create an edge</strong>: Click and drag from a node (or its port) onto another node; press Esc to cancel</li>
              <li><strong>Pan</strong>: Drag on canvas or edges; <strong>Zoom</strong>: Mouse wheel or controls</li>
              <li><strong>Rebuild</strong>: Use ‚ÄúRebuild‚Äù to re-layout from scratch (enabled in edit mode)</li>
            </ul>
            <p>When you're done, click "Done" to lock the canvas.</p>
          </div>
        </div>
      `;
      document.body.appendChild(helpOverlay);
      helpOverlay.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (target.classList.contains('modal-overlay') || target.classList.contains('modal-close')) {
          closeHelp();
        }
      });
    }
    helpOverlay.style.display = 'flex';
  }
  function closeHelp() {
    if (helpOverlay) helpOverlay.style.display = 'none';
  }
  helpBtn?.addEventListener('click', openHelp);

  // Ingest wiring
  function handleIngestMessage(msg: any) {
    if (!currentGraph) return;
    applyIngestMessage(currentGraph, msg);
  }

  // Source connection state management
  function updateSourceIcon() {
    const iconBtn = document.getElementById('source-icon');
    if (!iconBtn) return;
    iconBtn.classList.remove('active', 'connecting', 'error');

    const isConnected = (activeSourceType === 'ws' && wsStatus === 'connected') ||
                        (activeSourceType === 'folder' && fsStatus === 'connected');
    const isConnecting = (activeSourceType === 'ws' && wsStatus === 'connecting') ||
                         (activeSourceType === 'folder' && fsStatus === 'opening');
    const hasError = (activeSourceType === 'ws' && wsStatus === 'error') ||
                     (activeSourceType === 'folder' && fsStatus === 'error');

    if (isConnected) {
      iconBtn.classList.add('active');
      // Update icon based on source type
      iconBtn.textContent = activeSourceType === 'folder' ? 'üìÅ' : 'üì°';
    } else if (isConnecting) {
      iconBtn.classList.add('connecting');
      iconBtn.textContent = activeSourceType === 'folder' ? 'üìÅ' : 'üì°';
    } else if (hasError) {
      iconBtn.classList.add('error');
      iconBtn.textContent = activeSourceType === 'folder' ? 'üìÅ' : 'üì°';
    } else {
      iconBtn.textContent = 'üì°';
    }
  }

  function updateWsStatus(status: 'connecting' | 'connected' | 'reconnecting' | 'closed' | 'error', detail?: any) {
    if (status === 'connecting' || status === 'reconnecting') {
      wsStatus = 'connecting';
      activeSourceType = 'ws';
    } else if (status === 'connected') {
      wsStatus = 'connected';
      activeSourceType = 'ws';
      // Disconnect folder if connected
      if (fsSource && fsStatus === 'connected') {
        fsSource.close();
      }
    } else if (status === 'error') {
      wsStatus = 'error';
    } else {
      wsStatus = 'disconnected';
      if (activeSourceType === 'ws') {
        activeSourceType = null;
      }
    }
    updateSourceIcon();
    updateStatusText();
    updateSourceModal();
  }

  function updateFsStatus(status: 'idle' | 'opened' | 'reading' | 'error' | 'closed', detail?: any) {
    if (status === 'opened') {
      fsStatus = 'opening';
      activeSourceType = 'folder';
      // Disconnect WS if connected
      if (wsSource && wsStatus === 'connected') {
        wsSource.disconnect();
      }
    } else if (status === 'reading') {
      fsStatus = 'connected';
      activeSourceType = 'folder';
    } else if (status === 'error') {
      fsStatus = 'error';
    } else if (status === 'closed') {
      fsStatus = 'disconnected';
      if (activeSourceType === 'folder') {
        activeSourceType = null;
      }
    } else {
      fsStatus = 'disconnected';
    }
    updateSourceIcon();
    updateStatusText();
    updateSourceModal();
  }

  function updateStatusText() {
    // Status is now purely visual via the icon indicator
    // No text status needed
  }

  // Source Modal management
  function createSourceModal() {
    if (sourceModal) return sourceModal;

    sourceModal = document.createElement('div');
    sourceModal.className = 'modal-overlay';
    sourceModal.style.display = 'none';
    sourceModal.innerHTML = `
      <div class="modal" role="dialog" aria-modal="true" aria-labelledby="source-modal-title">
        <div class="modal-header">
          <h3 id="source-modal-title">Data Source Connection</h3>
          <button class="modal-close" title="Close" aria-label="Close">√ó</button>
        </div>
        <div class="modal-body">
          <div class="source-type-selector">
            <button class="source-type-option" data-source="ws">üì° WebSocket</button>
            <button class="source-type-option" data-source="folder">üìÅ Folder</button>
          </div>

          <div class="source-controls" data-source="ws">
            <div class="form-group">
              <label for="source-modal-url">WebSocket URL</label>
              <input type="text" id="source-modal-url" value="${wsUrl}" />
            </div>
            <div class="button-group">
              <button id="source-modal-connect-ws" class="primary">Connect</button>
              <button id="source-modal-disconnect-ws">Disconnect</button>
              <button id="source-modal-change-ws">Change Connection</button>
            </div>
          </div>

          <div class="source-controls" data-source="folder">
            <div class="form-group">
              <label>File System Source</label>
              <p style="font-size: 0.875rem; color: var(--color-text-muted); margin-top: 0.25rem;">
                Select a directory containing a graph.ndjson file to watch for changes.
              </p>
            </div>
            <div class="button-group">
              <button id="source-modal-connect-folder" class="primary">Open Folder</button>
              <button id="source-modal-disconnect-folder">Disconnect</button>
            </div>
          </div>

          <div id="source-modal-status"></div>
        </div>
      </div>
    `;
    document.body.appendChild(sourceModal);

    // Close modal handlers
    sourceModal.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target.classList.contains('modal-overlay') || target.classList.contains('modal-close')) {
        closeSourceModal();
      }
    });

    // Source type selector
    sourceModal.querySelectorAll('.source-type-option').forEach(btn => {
      btn.addEventListener('click', () => {
        const sourceType = btn.getAttribute('data-source');
        if (sourceType) {
          selectSourceType(sourceType as 'ws' | 'folder');
        }
      });
    });

    // Button handlers
    document.getElementById('source-modal-connect-ws')?.addEventListener('click', handleConnect);
    document.getElementById('source-modal-disconnect-ws')?.addEventListener('click', handleDisconnect);
    document.getElementById('source-modal-change-ws')?.addEventListener('click', handleChangeConnection);
    document.getElementById('source-modal-connect-folder')?.addEventListener('click', handleOpenFolder);
    document.getElementById('source-modal-disconnect-folder')?.addEventListener('click', handleCloseFolder);

    // Enter key on input
    document.getElementById('source-modal-url')?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && wsStatus !== 'connected') {
        handleConnect();
      }
    });

    return sourceModal;
  }

  function selectSourceType(type: 'ws' | 'folder', skipUpdate = false) {
    if (!sourceModal) return;

    // Update selector UI
    sourceModal.querySelectorAll('.source-type-option').forEach(btn => {
      if (btn.getAttribute('data-source') === type) {
        btn.classList.add('active');
      } else {
        btn.classList.remove('active');
      }
    });

    // Show/hide controls
    sourceModal.querySelectorAll('.source-controls').forEach(controls => {
      if (controls.getAttribute('data-source') === type) {
        controls.classList.add('active');
      } else {
        controls.classList.remove('active');
      }
    });

    // Only update the rest of the modal if not skipping (to avoid circular calls)
    if (!skipUpdate) {
      updateSourceModalContent();
    }
  }

  function updateSourceModalContent() {
    if (!sourceModal) return;

    // Update WS controls
    const urlInput = document.getElementById('source-modal-url') as HTMLInputElement;
    const connectWsBtn = document.getElementById('source-modal-connect-ws') as HTMLButtonElement;
    const disconnectWsBtn = document.getElementById('source-modal-disconnect-ws') as HTMLButtonElement;
    const changeWsBtn = document.getElementById('source-modal-change-ws') as HTMLButtonElement;

    if (urlInput && connectWsBtn && disconnectWsBtn && changeWsBtn) {
      const isWsConnected = wsStatus === 'connected';
      const isWsConnecting = wsStatus === 'connecting';

      connectWsBtn.disabled = isWsConnected || isWsConnecting;
      disconnectWsBtn.disabled = !isWsConnected || isWsConnecting;
      changeWsBtn.disabled = !isWsConnected || isWsConnecting;
      urlInput.disabled = isWsConnecting;
    }

    // Update Folder controls
    const connectFolderBtn = document.getElementById('source-modal-connect-folder') as HTMLButtonElement;
    const disconnectFolderBtn = document.getElementById('source-modal-disconnect-folder') as HTMLButtonElement;

    if (connectFolderBtn && disconnectFolderBtn) {
      const isFolderConnected = fsStatus === 'connected';
      const isFolderOpening = fsStatus === 'opening';

      connectFolderBtn.disabled = isFolderConnected || isFolderOpening;
      disconnectFolderBtn.disabled = !isFolderConnected || isFolderOpening;
    }

    // Update status message
    const statusDiv = document.getElementById('source-modal-status');
    if (!statusDiv) return;

    statusDiv.innerHTML = '';

    if (activeSourceType === 'ws') {
      if (wsStatus === 'connecting') {
        statusDiv.innerHTML = `
          <div class="status-message info">
            <span class="loading-spinner"></span>
            Connecting to ${urlInput?.value || wsUrl}...
          </div>
        `;
      } else if (wsStatus === 'connected') {
        statusDiv.innerHTML = `
          <div class="status-message success">
            ‚úì Connected to ${urlInput?.value || wsUrl}
          </div>
        `;
      } else if (wsStatus === 'error') {
        statusDiv.innerHTML = `
          <div class="status-message error">
            ‚úó Connection error. Please check the URL and try again.
          </div>
        `;
      } else {
        statusDiv.innerHTML = `
          <div class="status-message info">
            Not connected
          </div>
        `;
      }
    } else if (activeSourceType === 'folder') {
      if (fsStatus === 'opening') {
        statusDiv.innerHTML = `
          <div class="status-message info">
            <span class="loading-spinner"></span>
            Opening folder...
          </div>
        `;
      } else if (fsStatus === 'connected') {
        statusDiv.innerHTML = `
          <div class="status-message success">
            ‚úì Folder connected and watching for changes
          </div>
        `;
      } else if (fsStatus === 'error') {
        statusDiv.innerHTML = `
          <div class="status-message error">
            ‚úó Error opening folder. Please try again.
          </div>
        `;
      } else {
        statusDiv.innerHTML = `
          <div class="status-message info">
            Not connected
          </div>
        `;
      }
    } else {
      statusDiv.innerHTML = `
        <div class="status-message info">
          Select a source type to connect
        </div>
      `;
    }
  }

  function updateSourceModal() {
    if (!sourceModal) return;

    // Update source type selector based on active source (skip the update to avoid circular call)
    const activeType = activeSourceType || 'ws';
    selectSourceType(activeType, true);

    // Update the rest of the modal content
    updateSourceModalContent();
  }

  function openSourceModal() {
    createSourceModal();
    if (sourceModal) {
      const urlInput = document.getElementById('source-modal-url') as HTMLInputElement;
      if (urlInput) {
        urlInput.value = wsUrl;
      }
      // Select the active source type or default to ws
      const activeType = activeSourceType || 'ws';
      selectSourceType(activeType);
      updateSourceModal();
      sourceModal.style.display = 'flex';
    } else {
      console.error('Failed to create source modal');
    }
  }

  function closeSourceModal() {
    if (sourceModal) {
      sourceModal.style.display = 'none';
    }
  }

  function handleConnect() {
    const urlInput = document.getElementById('source-modal-url') as HTMLInputElement;
    if (!urlInput) return;

    const url = urlInput.value.trim() || 'ws://localhost:8787';
    wsUrl = url;

    if (wsSource) {
      wsSource.disconnect();
    }

    wsSource = new WebSocketSource(url, handleIngestMessage, updateWsStatus);
    wsSource.connect();
    updateSourceModal();
  }

  function handleDisconnect() {
    wsSource?.disconnect();
    updateSourceModal();
  }

  function handleChangeConnection() {
    if (wsSource) {
      wsSource.disconnect();
    }
    const urlInput = document.getElementById('source-modal-url') as HTMLInputElement;
    if (urlInput) {
      urlInput.focus();
      urlInput.select();
    }
    updateSourceModal();
  }

  async function handleOpenFolder() {
    if (!fsSource) {
      fsSource = new FileSystemSource(handleIngestMessage, updateFsStatus);
    }
    updateSourceModal();
    await fsSource.openDirectory();
  }

  function handleCloseFolder() {
    fsSource?.close();
    updateSourceModal();
  }

  // Source Icon button click handler
  function attachSourceIconListener() {
    const sourceIconBtn = document.getElementById('source-icon');
    if (sourceIconBtn) {
      sourceIconBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        openSourceModal();
      });
    } else {
      console.error('Source icon button not found');
    }
  }

  // Attach listener when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', attachSourceIconListener);
  } else {
    attachSourceIconListener();
  }

  // Keyboard shortcuts for navigation
  document.addEventListener('keydown', (e) => {
    if (!currentGraph) return;
    if (e.target instanceof HTMLInputElement || e.target instanceof HTMLSelectElement) return;

    switch (e.key) {
      case 'Home':
        currentGraph.nav('first'); updateHistoryLabel();
        break;
      case 'End':
        currentGraph.nav('last'); updateHistoryLabel();
        break;
      case 'ArrowLeft':
        currentGraph.nav('prev'); updateHistoryLabel();
        break;
      case 'ArrowRight':
        currentGraph.nav('next'); updateHistoryLabel();
        break;
    }
  });

  // Initial render
  renderGraph();
  // Ensure rebuild state matches initial edit mode
  (document.getElementById('rebuild') as HTMLButtonElement | null)?.setAttribute('disabled', (!isEditable).toString());
  // Initialize source icon state
  updateSourceIcon();
  updateStatusText();
</script>
