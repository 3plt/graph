---
import { examples, exampleList } from '../examples';
import { generateAngularCode } from '../examples/codegen';
import Code from './Code.astro';

const defaultExample = examples.diamond;
const defaultCode = generateAngularCode(defaultExample);
---

<div class="demo-wrapper">
  <div class="demo-header">
    <div class="demo-info">
      <h3>Angular Implementation</h3>
      <p>Using <code>@3plate/graph-angular</code> package</p>
    </div>
    <div class="demo-controls">
      <div class="control-group">
        <label for="angular-example-select">Example:</label>
        <select id="angular-example-select">
          {exampleList.map(key => (
            <option value={key} selected={key === 'diamond'}>{examples[key].name}</option>
          ))}
        </select>
      </div>
    </div>
  </div>

  <div class="code-example">
    <h4>Code</h4>
    <div id="angular-code-display">
      <Code code={defaultCode} lang="typescript" />
    </div>
  </div>
</div>

<style>
  .demo-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .demo-controls {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .control-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .control-group label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .control-group select {
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    background: var(--color-bg);
    color: var(--color-text);
    font-size: 0.875rem;
    cursor: pointer;
  }

  .code-example h4 {
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  #angular-code-display {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    font-size: 0.8125rem;
    line-height: 1.5;
    margin: 0;
  }

  #angular-code-display code {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
  }
</style>

<script>
  import { examples } from '../examples';
  import { generateAngularCode } from '../examples/codegen';
  import { highlightCode } from '../utils/highlighter';

  document.addEventListener('DOMContentLoaded', () => {
    const select = document.getElementById('angular-example-select') as HTMLSelectElement;
    const codeDisplay = document.getElementById('angular-code-display');

    if (select && codeDisplay) {
      select.addEventListener('change', async () => {
        const example = examples[select.value];
        if (example) {
          const code = generateAngularCode(example);
          const highlighted = await highlightCode(code, 'angular');
          codeDisplay.innerHTML = `<div class="code-block">${highlighted}</div>`;
        }
      });
    }
  });
</script>
