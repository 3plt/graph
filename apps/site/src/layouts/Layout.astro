---
interface Props {
  title: string;
}

const { title } = Astro.props;
const IS_DEV = import.meta.env.DEV;
const LOG_INGEST_URL = import.meta.env.VITE_LOG_INGEST_URL;
const LOG_LEVEL = import.meta.env.VITE_LOG_LEVEL || 'info';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="@3plate/graph - Graph library with stable layout and incremental updates" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline define:vars={{ IS_DEV, LOG_INGEST_URL, LOG_LEVEL }}>
      (function(){
        var IS_DEV_VAL = IS_DEV;
        var ENDPOINT_VAL = LOG_INGEST_URL || '';
        var LOG_LEVEL_VAL = LOG_LEVEL || 'info';
        if (IS_DEV_VAL && ENDPOINT_VAL) {
          window['__LOG_INGEST_URL'] = ENDPOINT_VAL;
          window['__LOG_LEVEL'] = LOG_LEVEL_VAL;
          try { console.log('[site] logging configured', { endpoint: ENDPOINT_VAL, level: LOG_LEVEL_VAL }) } catch {}
        }
        // Forward uncaught errors to collector (if set)
        function sendLine(obj) {
          try {
            var url = window['__LOG_INGEST_URL'];
            if (!url) return;
            var line = JSON.stringify(Object.assign({}, obj, { ts: Date.now() })) + '\n';
            // Always use fetch with no-cors and omit credentials to avoid CORS preflight and credentials
            fetch(url, {
              method: 'POST',
              mode: 'no-cors',
              credentials: 'omit',
              body: line,
              keepalive: true,
            }).catch(() => {});
          } catch {}
        }
        window.addEventListener('error', function(e) {
          sendLine({
            level: 'error',
            type: 'window.error',
            message: e.message,
            filename: e.filename,
            lineno: e.lineno,
            colno: e.colno,
          });
        });
        window.addEventListener('unhandledrejection', function(e) {
          var reason = (e && e.reason) ? e.reason : {};
          sendLine({
            level: 'error',
            type: 'unhandledrejection',
            message: (reason && reason.message) ? reason.message : String(reason),
            stack: reason && reason.stack,
          });
        });
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Light theme (default) */
  :root {
    --color-bg: #ffffff;
    --color-bg-secondary: #f5f5f5;
    --color-bg-code: #f8f8f8;
    --color-text: #333333;
    --color-text-muted: #666666;
    --color-primary: #3b82f6;
    --color-primary-hover: #2563eb;
    --color-border: #e5e5e5;
    --color-border-active: #3b82f6;
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);

    /* Prism light theme tokens */
    --code-comment: #6a737d;
    --code-punctuation: #24292e;
    --code-tag: #22863a;
    --code-function: #6f42c1;
    --code-boolean: #005cc5;
    --code-property: #005cc5;
    --code-keyword: #d73a49;
    --code-string: #032f62;
    --code-operator: #24292e;
  }

  /* Dark theme */
  @media (prefers-color-scheme: dark) {
    :root {
      --color-bg: #1a1a1a;
      --color-bg-secondary: #242424;
      --color-bg-code: #1e1e1e;
      --color-text: #e5e5e5;
      --color-text-muted: #a0a0a0;
      --color-primary: #60a5fa;
      --color-primary-hover: #3b82f6;
      --color-border: #404040;
      --color-border-active: #60a5fa;
      --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
      --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4);
      --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.5);

      /* Prism dark theme tokens */
      --code-comment: #6a9955;
      --code-punctuation: #d4d4d4;
      --code-tag: #569cd6;
      --code-function: #dcdcaa;
      --code-boolean: #dcdcaa;
      --code-property: #4ec9b0;
      --code-keyword: #c586c0;
      --code-string: #ce9178;
      --code-operator: #d4d4d4;
    }
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
      'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
      sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background: var(--color-bg-secondary);
    color: var(--color-text);
    line-height: 1.6;
  }

  code {
    font-family: 'Fira Code', 'Consolas', 'Courier New', Courier, monospace;
    background: var(--color-bg-code);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
</style>
