{
  "name": "@3plate/graph",
  "version": "0.1.5",
  "description": "Graph library with stable layout and incremental updates",
  "type": "module",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3plt/graph.git"
  },
  "packageManager": "pnpm@10.11.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@3plate/graph-angular": "workspace:*",
    "@3plate/graph-core": "workspace:*",
    "@3plate/graph-react": "workspace:*",
    "@3plate/graph-vue": "workspace:*"
  },
  "scripts": {
    "clean": "rm -rf dist packages/*/dist apps/*/dist",
    "build": "pnpm --filter './packages/*' build && pnpm build:self",
    "build:self": "tsup src/index.ts --format cjs,esm",
    "build:core": "pnpm --filter @3plate/graph-core build",
    "build:react": "pnpm --filter @3plate/graph-react build",
    "build:vue": "pnpm --filter @3plate/graph-vue build",
    "build:site": "pnpm --filter demo-site build",
    "dev:site": "pnpm --filter demo-site dev",
    "dev:demo": "pnpm --filter demo-react dev",
    "test": "pnpm -r test",
    "test:watch": "pnpm --filter @3plate/graph-core test:watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "changeset": "changeset",
    "version": "changeset version",
    "publish:packages": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "tsup": "^8.5.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  }
}